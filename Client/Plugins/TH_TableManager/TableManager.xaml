                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <th_wpf:Button Clicked="DropTables_Button_Clicked" Image="Resources/TrashCan_01.png" ToolTip="Drop Tables">
                    <th_wpf:Button.Style>
