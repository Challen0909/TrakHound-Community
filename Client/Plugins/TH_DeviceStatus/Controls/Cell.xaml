<UserControl x:Class="TH_StatusTable.Controls.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TH_StatusTable.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid x:Name="root">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding StatusLevel}" Value="2">
                        <Setter Property="Background" Value="{StaticResource StatusGreen}"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding StatusLevel}" Value="1">
                        <Setter Property="Background" Value="{StaticResource StatusYellow}"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding StatusLevel}" Value="0">
                        <Setter Property="Background" Value="{StaticResource StatusRed}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
    </Grid>

</UserControl>
