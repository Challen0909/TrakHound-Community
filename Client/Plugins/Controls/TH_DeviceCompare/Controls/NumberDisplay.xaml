<UserControl x:Class="TH_DeviceCompare.Controls.NumberDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>    
        
        <!--Number Type-->
        <TextBlock Text="{Binding Value_Type}" FontSize="12" Foreground="#33ffffff" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0"/>

        <!--Number Value-->
        <TextBlock Grid.Column="1" Text="{Binding Value}" FontSize="18" Foreground="#aaffffff" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,0,0"/>
        
        <!--Trend Arrow-->
        <Rectangle Grid.Column="2" Width="30" Height="30" Margin="5,0,0,0">
            <Rectangle.Resources>
                <ImageBrush x:Key="UP_Arrow_IMG"  Stretch="Uniform" ImageSource="/TH_DeviceCompare;component/Resources/Arrow_Up_01.png" />
                <ImageBrush x:Key="DOWN_Arrow_IMG"  Stretch="Uniform" ImageSource="/TH_DeviceCompare;component/Resources/Arrow_Down_01.png" />
            </Rectangle.Resources>

            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <!--<Setter Property="OpacityMask" Value="{x:Null}" />
                    <Setter Property="Fill" Value="{x:Null}"/>-->
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ValueIncreasing}" Value="true">
                            <Setter Property="OpacityMask" Value="{StaticResource UP_Arrow_IMG}" />
                            <Setter Property="Fill" Value="Green"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ValueDecreasing}" Value="true">
                            <Setter Property="OpacityMask" Value="{StaticResource DOWN_Arrow_IMG}" />
                            <Setter Property="Fill" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>

    </Grid>
    
</UserControl>
