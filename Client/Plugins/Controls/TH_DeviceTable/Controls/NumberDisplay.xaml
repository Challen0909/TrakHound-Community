<UserControl x:Class="TH_DeviceTable.Controls.NumberDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="200"
             Height="100"
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TH_Styles;component/All.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" Margin="0,10">
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="*"/>-->
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>    
        
        <!--Previous Values--><!--
        <Grid Grid.Column="0" HorizontalAlignment="Center" Margin="5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            --><!--Previous Value 3--><!--
            <TextBlock Grid.Row="0" Text="{Binding PreviousValue3}" FontSize="10" Foreground="{StaticResource Foreground_Opposite_Light}" Opacity="0.25"
                       FontFamily="/TH_DeviceCompare;component/Fonts/#DS-Digital"/>

            --><!--Previous Value 2--><!--
            <TextBlock Grid.Row="1" Text="{Binding PreviousValue2}" FontSize="10" Foreground="{StaticResource Foreground_Opposite_Light}" Opacity="0.5"
                       FontFamily="/TH_DeviceCompare;component/Fonts/#DS-Digital"/>

            --><!--Previous Value 1--><!--
            <TextBlock Grid.Row="2" Text="{Binding PreviousValue1}" FontSize="10" Foreground="{StaticResource Foreground_Opposite_Light}" Opacity="0.75"
                       FontFamily="/TH_DeviceCompare;component/Fonts/#DS-Digital"/>
        </Grid>-->

        <!--Number Value-->
        <TextBlock Grid.Column="0" Text="{Binding ValueText}" FontSize="45"
                   Foreground="{StaticResource Foreground_Opposite_Normal}"
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   FontFamily="/TH_DeviceCompare;component/Fonts/#DS-Digital"
                   Margin="5,0"
                   />
        <!--<TextBlock Grid.Column="1" Text="{Binding ValueText}" FontSize="24"
                   Foreground="{StaticResource Foreground_Opposite_Normal}"
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   FontFamily="/TH_DeviceCompare;component/Fonts/#DS-Digital"
                   Margin="5,0"
                   />-->
        
        <!--Trend Arrow-->
        <Rectangle Grid.Column="2" Width="40" Height="40" Margin="5,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Rectangle.Resources>
                <!--<ImageBrush x:Key="UP_Arrow_IMG"  Stretch="Uniform" ImageSource="/TH_DeviceTable;component/Resources/Carrot_Arrow_Up_02.png" />
                <ImageBrush x:Key="DOWN_Arrow_IMG"  Stretch="Uniform" ImageSource="/TH_DeviceTable;component/Resources/Carrot_Arrow_Down_02.png" />-->
                <ImageBrush x:Key="UP_Arrow_IMG"  Stretch="Uniform" ImageSource="/TH_DeviceTable;component/Resources/Arrow_Up_01.png" />
                <ImageBrush x:Key="DOWN_Arrow_IMG"  Stretch="Uniform" ImageSource="/TH_DeviceTable;component/Resources/Arrow_Down_01.png" />
            </Rectangle.Resources>

            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ValueIncreasing}" Value="true">
                            <Setter Property="OpacityMask" Value="{StaticResource UP_Arrow_IMG}" />
                            <Setter Property="Fill" Value="{StaticResource Foreground_Opposite_Normal}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ValueDecreasing}" Value="true">
                            <Setter Property="OpacityMask" Value="{StaticResource DOWN_Arrow_IMG}" />
                            <Setter Property="Fill" Value="{StaticResource Foreground_Opposite_Normal}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>

    </Grid>
    
</UserControl>
