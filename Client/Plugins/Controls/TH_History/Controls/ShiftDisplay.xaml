<UserControl x:Class="TH_History.Controls.ShiftDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
              xmlns:controls="clr-namespace:TH_History.Controls"
             
             mc:Ignorable="d" 
             d:DesignHeight="300"
             d:DesignWidth="300"
             >
    
    <StackPanel>
            
        <controls:ShiftInfo x:Name="day_ShiftInfo" />

        <ItemsControl ItemsSource="{Binding ShiftInfos}"/>


    </StackPanel>
    
</UserControl>
