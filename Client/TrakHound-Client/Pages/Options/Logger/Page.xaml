<UserControl x:Class="TrakHound_Client.Pages.Options.Logger.Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrakHound_Client.Pages.Options.Logger"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">


    <StackPanel>

        <!--Queue Write Interval-->
        <StackPanel Width="500">

            <!--Title and Help-->
            <StackPanel Orientation="Horizontal">

                <!--Title-->
                <TextBlock Text="Queue Write Interval" Foreground="{StaticResource Foreground_Normal}" Margin="0,0,10,0" FontSize="12pt" VerticalAlignment="Center"/>

                <!--Help-->
                <Rectangle Width="15" Height="15" MouseDown="Help_MouseDown" MouseEnter="Help_MouseEnter" MouseLeave="Help_MouseLeave">
                    <Rectangle.ToolTip>
                        <ToolTip MaxWidth="400">
                            <StackPanel>
                                <TextBlock Text="Queue Write Interval" FontWeight="Bold"/>
                                <TextBlock TextWrapping="Wrap">
                                            Sets the interval (in ms) that the queue writes to the log file
                                </TextBlock>
                            </StackPanel>
                        </ToolTip>
                    </Rectangle.ToolTip>


                    <Rectangle.Resources>
                        <ImageBrush x:Key="IMG" Stretch="Uniform" ImageSource="/TH_DeviceManager;component/Resources/Help_01.png" />
                    </Rectangle.Resources>

                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="OpacityMask" Value="{StaticResource IMG}" />
                            <Setter Property="Fill" Value="{StaticResource Accent_Normal}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Fill" Value="{StaticResource Accent_Light}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>

                </Rectangle>

            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Slider Grid.Column="1" Value="{Binding QueueWriteInterval}" Margin="10,10,10,0"
                                LargeChange="1000"
                                Maximum="60000"
                                Minimum="1000"
                                TickFrequency="2000"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="true"
                                Height="30"
                                ValueChanged="QueueWriteInterval_Slider_ValueChanged"
                                VerticalAlignment="Center"
                                />

                <Border  BorderThickness="1" CornerRadius="1" Margin="0,5,10,0" Background="{StaticResource Window_Background}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="{StaticResource Shade_Normal}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="BorderBrush" Value="{StaticResource Accent_Normal}"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding IsFocused, ElementName=queueWriteInterval_TXT}" Value="true">
                                    <Setter Property="BorderBrush" Value="{StaticResource Accent_Normal}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid Margin="10,0">

                        <!--Instructions-->
                        <TextBlock Text="{Binding QueueWriteInterval_TimeSpan}" FontSize="12pt" Foreground="{StaticResource Foreground_Normal}" VerticalAlignment="Center" Margin="2,0" >
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=queueWriteInterval_TXT}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!--User Input-->
                        <TextBox x:Name="queueWriteInterval_TXT"
                                 LostFocus="queueWriteInterval_TXT_LostFocus" TextChanged="queueWriteInterval_TXT_TextChanged" 
                                 BorderThickness="0" Background="Transparent" Foreground="{StaticResource Foreground_Normal}"
                                 FontSize="12pt" Height="35"
                                 VerticalAlignment="Center" VerticalContentAlignment="Center"
                                 MaxLines="1" CaretBrush="Black"/>

                    </Grid>

                </Border>

            </Grid>

        </StackPanel>

        
        
        
    </StackPanel>

</UserControl>
