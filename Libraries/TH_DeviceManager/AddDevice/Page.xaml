<UserControl x:Class="TH_DeviceManager.AddDevice.Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:TH_DeviceManager.AddDevice"
             xmlns:controls="clr-namespace:TH_DeviceManager.Controls"
             xmlns:th_wpf="clr-namespace:TH_WPF;assembly=TH_WPF"
             
             mc:Ignorable="d" 
             d:DesignWidth="600"
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TH_Styles;component/All.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid Background="{StaticResource Accent_Normal}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Navigation Panel-->
        <StackPanel HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="th_wpf:ListButton">
                    <Setter Property="ShowImage" Value="False"/>
                    <Setter Property="Height" Value="100"/>
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="MinWidth" Value="100"/>
                    <Setter Property="Foreground" Value="{StaticResource Foreground_Opposite_Normal}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="{StaticResource Accent_Light}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter Property="Background" Value="{StaticResource Accent_Light}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="controls:PageItem">
                    <Setter Property="Foreground" Value="{StaticResource Foreground_Opposite_Normal}"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </StackPanel.Resources>

            <!--Auto Detect-->
            <th_wpf:ListButton>
                <th_wpf:ListButton.ButtonContent>
                    <controls:PageItem Text="Auto Detect" Image="/TH_DeviceManager;component/Resources/options_gear_30px.png" Clicked="AutoDetect_Clicked"/>
                </th_wpf:ListButton.ButtonContent>
            </th_wpf:ListButton>

            <!--Manual-->
            <th_wpf:ListButton>
                <th_wpf:ListButton.ButtonContent>
                    <controls:PageItem Text="Manual" Image="/TH_DeviceManager;component/Resources/Edit_02.png" Clicked="Manual_Clicked"/>
                </th_wpf:ListButton.ButtonContent>
            </th_wpf:ListButton>

            <!--Load From File-->
            <th_wpf:ListButton>
                <th_wpf:ListButton.ButtonContent>
                    <controls:PageItem Text="Load From File" Image="/TH_DeviceManager;component/Resources/List_01.png" Clicked="LoadFromFile_Clicked"/>
                </th_wpf:ListButton.ButtonContent>
            </th_wpf:ListButton>

            <!--Create New Device-->
            <!--<th_wpf:ListButton>
                <th_wpf:ListButton.ButtonContent>
                    <controls:PageItem Text="Create New Device" Image="/TH_DeviceManager;component/Resources/Information_01.png" Clicked="CreateNew_Clicked"/>
                </th_wpf:ListButton.ButtonContent>
            </th_wpf:ListButton>-->

        </StackPanel>

        <Border Grid.Column="1" BorderBrush="{StaticResource Accent_Dark}" BorderThickness="1">

            <Grid Background="{StaticResource Window_Background}" >

                <Grid Margin="40,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,10">

                            <!--Image-->
                            <Grid Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" Height="30" VerticalAlignment="Center" Margin="0,0,20,0">
                                <Grid.Resources>
                                    <ImageBrush x:Key="IMG" Stretch="Uniform" ImageSource="{Binding CurrentPage.Image}" />
                                </Grid.Resources>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="OpacityMask" Value="{StaticResource IMG}" />
                                        <Setter Property="Background" Value="{StaticResource Foreground_Normal}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentPage.Image}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                            </Grid>

                            <!--Page Name-->
                            <TextBlock Text="{Binding CurrentPage.Title}" Foreground="{StaticResource Foreground_Normal}" FontSize="30" VerticalAlignment="Center"/>

                        </StackPanel>

                        <Rectangle Grid.Row="1" Fill="{StaticResource Shade_Normal}" Height="0.5" Margin="0,5"/>

                    </Grid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="auto" >

                        <ContentControl Content="{Binding CurrentPage}"/>

                    </ScrollViewer>

                </Grid>

            </Grid>

        </Border>

    </Grid>

</UserControl>
