<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Accent Colors-->
    <Color x:Key="Accent_Normal_Color">#0080ff</Color>
    <Color x:Key="Accent_Light_Color">#40a0ff</Color>
    <Color x:Key="Accent_Dark_Color">#0060ff</Color>
    <Color x:Key="Accent_Hover_Color">#200080ff</Color>
    <Color x:Key="Accent_HoverBorder_Color">#600080ff</Color>

    <!--Window Backgrounds-->
    <SolidColorBrush x:Key="Window_Background" Color="#fff"/>
    <SolidColorBrush x:Key="Window_Background_Dark" Color="#f8f8f8"/>
    
    <RadialGradientBrush x:Key="Window_Background_Accent_Gradient" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="{StaticResource Accent_Light_Color}" Offset="0.3" />
            <GradientStop Color="{StaticResource Accent_Normal_Color}" Offset="1" />
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>

    <!--Accent Brushes-->
    <SolidColorBrush x:Key="Accent_Normal" Color="{StaticResource Accent_Normal_Color}"/>
    <!--<SolidColorBrush x:Key="Accent_Light" Color="#00aaff"/>-->
    <SolidColorBrush x:Key="Accent_Light" Color="{StaticResource Accent_Light_Color}"/>
    <!--<SolidColorBrush x:Key="Accent_Light" Color="#00c0ff"/>-->
    <SolidColorBrush x:Key="Accent_Dark" Color="{StaticResource Accent_Dark_Color}"/>
    <SolidColorBrush x:Key="Accent_Hover" Color="{StaticResource Accent_Hover_Color}"/>
    <SolidColorBrush x:Key="Accent_Hover_Border" Color="{StaticResource Accent_HoverBorder_Color}"/>

    <RadialGradientBrush x:Key="Accent_LightGradient" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="#cc00aaff" Offset="0" />
            <GradientStop Color="#6600aaff" Offset="1.0" />
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>

    <!--<SolidColorBrush x:Key="Accent_Normal" Color="#FF5696D4"/>
    <SolidColorBrush x:Key="Accent_Light" Color="#FF65B3FF"/>
    <SolidColorBrush x:Key="Accent_Dark" Color="#FF3377B9"/>
    <SolidColorBrush x:Key="Accent_Hover" Color="#105696D4"/>-->

    <!--Dark-->
    <!--<SolidColorBrush x:Key="Accent_Normal" Color="#004C97"/>
    <SolidColorBrush x:Key="Accent_Light" Color="#0060FF"/>
    <SolidColorBrush x:Key="Accent_Dark" Color="#003364"/>
    <SolidColorBrush x:Key="Accent_Hover" Color="#10004C97"/>-->

    <!--Light-->
    <!--<SolidColorBrush x:Key="Accent_Normal" Color="#00ddff"/>
    <SolidColorBrush x:Key="Accent_Light" Color="#00eeff"/>
    <SolidColorBrush x:Key="Accent_Dark" Color="#00aaff"/>
    <SolidColorBrush x:Key="Accent_Hover" Color="#1000ddff"/>-->

    <!--Foregound-->
    <SolidColorBrush x:Key="Foreground_Normal" Color="#333"/>
    <SolidColorBrush x:Key="Foreground_Light" Color="#888"/>
    <SolidColorBrush x:Key="Foreground_Dark" Color="#aaa"/>

    <!--<SolidColorBrush x:Key="Foreground_Normal" Color="#fff"/>
    <SolidColorBrush x:Key="Foreground_Light" Color="#aaffffff"/>
    <SolidColorBrush x:Key="Foreground_Dark" Color="#33ffffff"/>-->

    <SolidColorBrush x:Key="Foreground_Opposite_Normal" Color="#fff"/>
    <SolidColorBrush x:Key="Foreground_Opposite_Light" Color="#aaffffff"/>
    <SolidColorBrush x:Key="Foreground_Opposite_Dark" Color="#33ffffff"/>

    <!--Transparent Shades-->
    <SolidColorBrush x:Key="Shade_Normal" Color="#33000000"/>
    <SolidColorBrush x:Key="Shade_Light" Color="#33ffffff"/>
    <SolidColorBrush x:Key="Shade_Dark" Color="#66000000"/>

</ResourceDictionary>