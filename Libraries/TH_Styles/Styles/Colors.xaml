<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Window Backgrounds-->
    <SolidColorBrush x:Key="Window_Background" Color="#fff"/>
    <SolidColorBrush x:Key="Window_Background_Dark" Color="#f8f8f8"/>

    <!--Accent-->
    <SolidColorBrush x:Key="Accent_Normal" Color="#0080ff"/>
    <SolidColorBrush x:Key="Accent_Light" Color="#00aaff"/>
    <SolidColorBrush x:Key="Accent_Dark" Color="#0060ff"/>
    <SolidColorBrush x:Key="Accent_Hover" Color="#100080ff"/>

    <!--<SolidColorBrush x:Key="Accent_Normal" Color="Red"/>
    <SolidColorBrush x:Key="Accent_Light" Color="Pink"/>
    <SolidColorBrush x:Key="Accent_Dark" Color="DarkRed"/>
    <SolidColorBrush x:Key="Accent_Hover" Color="LightPink"/>-->

    <!--Foregound-->
    <SolidColorBrush x:Key="Foreground_Normal" Color="#333"/>
    <SolidColorBrush x:Key="Foreground_Light" Color="#888"/>
    <SolidColorBrush x:Key="Foreground_Dark" Color="#aaa"/>

    <SolidColorBrush x:Key="Foreground_Opposite_Normal" Color="#fff"/>
    <SolidColorBrush x:Key="Foreground_Opposite_Light" Color="#aaffffff"/>
    <SolidColorBrush x:Key="Foreground_Opposite_Dark" Color="#33ffffff"/>

</ResourceDictionary>