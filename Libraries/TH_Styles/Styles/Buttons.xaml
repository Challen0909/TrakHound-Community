<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Device Buttons-->

    <!--Disabled-->
    <LinearGradientBrush x:Key="Button_Disabled" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#C0EEEEEE" Offset="0"/>
        <GradientStop Color="#C0EEEEEE" Offset="0.5"/>
        <GradientStop Color="#C0EEEEEE" Offset="1"/>
    </LinearGradientBrush>

    <!--Enabled-->
    <LinearGradientBrush x:Key="Button_Enabled" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFF8F8F8" Offset="0"/>
        <GradientStop Color="#FFF8F8F8" Offset="0.49"/>
        <GradientStop Color="#FFEEEEEE" Offset="0.5"/>
        <GradientStop Color="#FFEEEEEE" Offset="1"/>
    </LinearGradientBrush>

    <!--Selected-->
    <LinearGradientBrush x:Key="Button_Selected" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF3C9CFF" Offset="0"/>
        <GradientStop Color="#FF50A6FF" Offset="0.5"/>
        <GradientStop Color="#FF3C9CFF" Offset="1"/>
    </LinearGradientBrush>

    <!--Mouse Over-->
    <LinearGradientBrush x:Key="Button_MouseOver" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#44888888" Offset="0"/>
        <GradientStop Color="#33888888" Offset="0.49"/>
        <GradientStop Color="#55888888" Offset="0.5"/>
        <GradientStop Color="#66888888" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>