<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TH_WPF.LevelIndicator">


    <!--Indicator Segment-->
    <Style TargetType="{x:Type local:Segment}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Segment}">

                    <Rectangle Fill="{TemplateBinding Foreground}" RadiusX="1" RadiusY="1" />

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
