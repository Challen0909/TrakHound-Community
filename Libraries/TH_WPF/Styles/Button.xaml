<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:th_wpf="clr-namespace:TH_WPF"
                    >


    <!--Blue Enabled--><!--
    <LinearGradientBrush x:Key="Button_Blue_Enabled" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#0080ff" Offset="0"/>
        <GradientStop Color="#20a0ff" Offset="0.5"/>
        <GradientStop Color="#0080ff" Offset="1"/>
    </LinearGradientBrush>

    --><!--Blue Enabled Hover--><!--
    <LinearGradientBrush x:Key="Button_Blue_Enabled_Hover" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#0080ff" Offset="0"/>
        <GradientStop Color="#20a0ff" Offset="0.5"/>
        <GradientStop Color="#0080ff" Offset="1"/>
    </LinearGradientBrush>

    --><!--Accent Button Style--><!--
    <Style TargetType="th_wpf:Button">
        <Setter Property="Foreground" Value="{StaticResource Foreground_Opposite_Normal}"/>
        <Setter Property="Background" Value="{StaticResource Accent_Normal}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="{StaticResource Accent_Light}"/>
            </Trigger>
        </Style.Triggers>
    </Style>-->



</ResourceDictionary>