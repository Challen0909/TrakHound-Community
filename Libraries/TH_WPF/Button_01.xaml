    <Grid x:Name="BD" Cursor="Hand">

        <!--Normal Style-->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AlternateStyle}" Value="true">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border CornerRadius="1" PreviewMouseDown="Border_PreviewMouseDown" Style="{StaticResource MainBorder_Normal}">

                <Grid>
                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="auto"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text}" Value="{x:Null}">
                                            <Setter Property="Width" Value="*"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="auto"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                            <Setter Property="Width" Value="*"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--Image-->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Margin" Value="5,0,0,0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Text}" Value="{x:Null}">
                                        <Setter Property="Margin" Value="5,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <!--<Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>-->

                        <Rectangle Width="25" Style="{StaticResource ImageRectangle_Normal}"/>

                    </Grid>

                    <!--Text Label-->
                    <TextBlock Grid.Column="1" Text="{Binding Text}" FontSize="14" Margin="10,0"
                       Style="{StaticResource TextLabel_Normal}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       />

                </Grid>

            </Border>

        </Grid>

        <!--Alternate Style-->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AlternateStyle}" Value="true">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border CornerRadius="1" PreviewMouseDown="Border_PreviewMouseDown" Style="{StaticResource MainBorder_Alternate}">

                <Grid>
                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="auto"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text}" Value="{x:Null}">
                                            <Setter Property="Width" Value="*"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="auto"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                            <Setter Property="Width" Value="*"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--Image-->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Margin" Value="5,0,0,0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Text}" Value="{x:Null}">
                                        <Setter Property="Margin" Value="5,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Rectangle Width="25" Style="{StaticResource ImageRectangle_Alternate}"/>

                    </Grid>

                    <!--Text Label-->
                    <TextBlock Grid.Column="1" Text="{Binding Text}" FontSize="14" Margin="10,0"
                       Style="{StaticResource TextLabel_Alternate}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       />

                </Grid>

            </Border>

        </Grid>

    </Grid>

</UserControl>
