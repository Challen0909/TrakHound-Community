<UserControl x:Class="TH_DeviceManager.Controls.DeviceButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:TH_DeviceManager.Controls"
             xmlns:th_wpf="clr-namespace:TH_WPF;assembly=TH_WPF"
             
             mc:Ignorable="d" 
             d:DesignWidth="300" Height="100"          
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TH_Styles;component/All.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#00000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="10" PreviewMouseDown="Grid_PreviewMouseDown">
            <Grid.Resources>

                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#66ffffff"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DeviceEnabled}" Value="true">
                            <Setter Property="Foreground" Value="#fff"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

            </Grid.Resources>
            

            <StackPanel>

                <TextBlock Text="{Binding Description}" FontSize="12pt" Margin="0,0,0,5" TextWrapping="Wrap"/>
                
                <TextBlock Text="{Binding Manufacturer}" FontSize="8pt"/>
                
                <TextBlock Text="{Binding Model}" FontSize="8pt"/>
               
                <TextBlock Text="{Binding Serial}" FontSize="8pt"/>
               
                <!--Device Id-->
                <TextBlock Text="{Binding Id}" FontSize="20pt" VerticalAlignment="Bottom" Margin="5,0,0,0"/>
                
            </StackPanel>

        </Grid>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                
                <Grid MouseDown="Grid_PreviewMouseDown" Background="#00000000"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">

                    <CheckBox x:Name="enabled_CHK" Style="{StaticResource Android_CheckBoxStyle2}" Height="30" Width="30" Checked="enabled_CHK_Checked" Unchecked="enabled_CHK_Unchecked" ToolTip="Enable/Disable Device"/>

                    <th_wpf:Button_05 Image="/TH_DeviceManager;component/Resources/X_01.png" ToolTip="Remove Device" Clicked="Remove_Clicked"/>

                </StackPanel>

            </Grid>

            <!--Share Button-->
            <th_wpf:Button_02 Grid.Row="1" Text="Share" ToolTip="Share this Device configuration with other TrakHound users" Image="/TH_DeviceManager;component/Resources/Share_01.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Clicked="Share_Clicked"/>

        </Grid>

    </Grid>

</UserControl>

