<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Alert Brushes-->

    <Color x:Key="Alert_True_Color">#FFE64646</Color>
    <Color x:Key="Alert_False_Color">#FF00C800</Color>

    <SolidColorBrush x:Key="Alert_True" Color="{StaticResource Alert_True_Color}"/>
    <SolidColorBrush x:Key="Alert_False" Color="{StaticResource Alert_False_Color}"/>

    <SolidColorBrush x:Key="IdleBrush" Color="Yellow" />

</ResourceDictionary>