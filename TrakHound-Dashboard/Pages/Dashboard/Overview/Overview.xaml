                <Rectangle Grid.Column="1" Width="1"/>

                <ItemsControl Grid.Column="2" ItemsSource="{Binding Columns}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding Columns.Count}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

            </Grid>

        </ScrollViewer>

    </Grid>

</UserControl>
