<UserControl x:Class="TrakHound_Dashboard.Pages.Dashboard.Overview.Controls.Column"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrakHound_Dashboard.Pages.Dashboard.Overview.Controls"
             
             xmlns:ui="clr-namespace:TrakHound_UI;assembly=TrakHound-UI"
             
             mc:Ignorable="d" 
             >

    <UserControl.Resources>

        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="#aaa"/>
        </Style>

        <Style TargetType="ui:MeterDisplay">
            <Setter Property="Foreground" Value="{StaticResource Text}" />
            <Setter Property="ActiveLevelBrush" Value="#888"/>
            <Setter Property="InactiveLevelBrush" Value="#aaa"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="ValueFormat" Value="P0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="0">
                    <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusRed}"/>
                    <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusRed_Hover}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="1">
                    <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusOrange}"/>
                    <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusOrange_Hover}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="2">
                    <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusGreen}"/>
                    <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusGreen_Hover}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Border x:Name="root" BorderBrush="#aaa" BorderThickness="0,0,1,0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="180"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Device Description-->
            <Border>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Height" Value="200"/>
                        <Setter Property="Background" Value="#60000000"/>
                        <Style.Triggers>

                            <DataTrigger Binding="{Binding DeviceStatus}" Value="Active">
                                <Setter Property="Background" Value="{StaticResource StatusGreen}"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DeviceStatus}" Value="Idle">
                                <Setter Property="Background" Value="{StaticResource StatusOrange}"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DeviceStatus}" Value="Alert">
                                <Setter Property="Background" Value="{StaticResource StatusRed}"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                <Setter Property="Height" Value="260"/>
                            </DataTrigger>
                            
                            <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                <Setter Property="Height" Value="320"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Connected}" Value="false">
                                <Setter Property="Background" Value="{StaticResource Disabled}"/>
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="MinWidth" Value="60"/>
                                    <Setter Property="Width" Value="*"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                            <Setter Property="MinWidth" Value="150"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="2">
                                            <Setter Property="Width" Value="200"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="2">
                                            <Setter Property="Width" Value="*"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="3">
                                            <Setter Property="Width" Value="*"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="3">
                                            <Setter Property="Width" Value="*"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition>
                            <RowDefinition.Style>
                                <Style TargetType="RowDefinition">
                                    <Setter Property="Height" Value="auto"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                            <Setter Property="Height" Value="50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </RowDefinition.Style>
                        </RowDefinition>
                        <RowDefinition>
                            <RowDefinition.Style>
                                <Style TargetType="RowDefinition">
                                    <Setter Property="Height" Value="auto"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                            <Setter Property="Height" Value="*"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </RowDefinition.Style>
                        </RowDefinition>
                        <RowDefinition>
                            <RowDefinition.Style>
                                <Style TargetType="RowDefinition">
                                    <Setter Property="Height" Value="*"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                            <Setter Property="Height" Value="auto"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </RowDefinition.Style>
                        </RowDefinition>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!--Device Logo-->
                    <Image Source="{Binding DeviceLogo}" HorizontalAlignment="Center" Stretch="Uniform" VerticalAlignment="Top">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="MaxHeight" Value="50"/>
                                <Setter Property="MaxWidth" Value="300"/>
                                <Setter Property="Margin" Value="10,15,10,5"/>
                                <Style.Triggers>
                                    <!--<DataTrigger Binding="{Binding DeviceLogo}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>-->
                                    <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                        <Setter Property="MaxWidth" Value="50"/>
                                        <Setter Property="Grid.Row" Value="2"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                        <Setter Property="MaxWidth" Value="140"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!--Status Indicator-->
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Grid.Row" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                        <Setter Property="Grid.Row" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition>
                                <RowDefinition.Style>
                                    <Style TargetType="RowDefinition">
                                        <Setter Property="Height" Value="0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                                <Setter Property="Height" Value="auto"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </RowDefinition.Style>
                            </RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <!--<ColumnDefinition Width="auto"/>-->
                            <ColumnDefinition>
                                <ColumnDefinition.Style>
                                    <Style TargetType="ColumnDefinition">
                                        <Setter Property="Width" Value="0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="2">
                                                <Setter Property="Width" Value="auto"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="3">
                                                <Setter Property="Width" Value="auto"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ColumnDefinition.Style>
                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Not Connected Indicator-->
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="50"/>
                                    <Setter Property="Width" Value="50"/>
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="OpacityMask" Value="{StaticResource Power_Large_IMG}"/>
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                            <Setter Property="Width" Value="30"/>
                                            <Setter Property="Height" Value="30"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Connected}" Value="false">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                        <Trigger Property="Opacity" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <!--Alert Indicator-->
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="50"/>
                                    <Setter Property="Width" Value="50"/>
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="OpacityMask" Value="{StaticResource Alert_Large_IMG}"/>
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                            <Setter Property="Width" Value="30"/>
                                            <Setter Property="Height" Value="30"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Connected}" Value="true"/>
                                                <Condition Binding="{Binding DeviceStatus}" Value="Alert"/>
                                            </MultiDataTrigger.Conditions>

                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>

                                        </MultiDataTrigger>

                                        <Trigger Property="Opacity" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <!--Idle Indicator-->
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="Width" Value="40"/>
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="OpacityMask" Value="{StaticResource Idle_Large_IMG}"/>
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                            <Setter Property="Width" Value="30"/>
                                            <Setter Property="Height" Value="30"/>
                                        </DataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Connected}" Value="true"/>
                                                <Condition Binding="{Binding DeviceStatus}" Value="Idle"/>
                                            </MultiDataTrigger.Conditions>

                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>

                                        </MultiDataTrigger>

                                        <Trigger Property="Opacity" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <!--Active Indicator-->
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="50"/>
                                    <Setter Property="Width" Value="50"/>
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="OpacityMask" Value="{StaticResource Active_Large_IMG}"/>
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                            <Setter Property="Width" Value="30"/>
                                            <Setter Property="Height" Value="30"/>
                                        </DataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Connected}" Value="true"/>
                                                <Condition Binding="{Binding DeviceStatus}" Value="Active"/>
                                            </MultiDataTrigger.Conditions>

                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>

                                        </MultiDataTrigger>

                                        <Trigger Property="Opacity" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <!--Time Display-->
                        <ui:TimeDisplay Time="{Binding DeviceStatusTime}" Foreground="#fff" Margin="10,0" HorizontalAlignment="Center">
                            <ui:TimeDisplay.Style>
                                <Style TargetType="ui:TimeDisplay">
                                    <Setter Property="MaxHeight" Value="40"/>
                                    <Setter Property="Grid.Column" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                            <Setter Property="Grid.Column" Value="0"/>
                                            <Setter Property="Grid.Row" Value="1"/>
                                            <Setter Property="MaxHeight" Value="20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="2">
                                            <Setter Property="MaxHeight" Value="30"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:TimeDisplay.Style>
                        </ui:TimeDisplay>

                    </Grid>

                    <!--Device Image-->
                    <Image Source="{Binding DeviceImage}" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image.Effect>
                            <DropShadowEffect Direction="225" Color="#66000000" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                        </Image.Effect>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Grid.Row" Value="2"/>
                                <!--<Setter Property="MaxWidth" Value="180"/>-->
                                <Setter Property="MaxHeight" Value="180"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                        <Setter Property="MaxWidth" Value="50"/>
                                        <Setter Property="MaxHeight" Value="50"/>
                                        <Setter Property="Grid.Row" Value="3"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding WidthStatus}" Value="2">
                                        <Setter Property="MaxWidth" Value="180"/>
                                        <Setter Property="Grid.Row" Value="0"/>
                                        <Setter Property="Grid.RowSpan" Value="5"/>
                                        <Setter Property="Grid.Column" Value="1"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding WidthStatus}" Value="3">
                                        <Setter Property="Grid.Row" Value="0"/>
                                        <Setter Property="Grid.Column" Value="1"/>
                                        <Setter Property="Grid.RowSpan" Value="5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!--Device Info-->
                    <Border Margin="0,0,0,10">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="VerticalAlignment" Value="Bottom"/>
                                <Setter Property="Grid.Row" Value="3"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                        <!--<Setter Property="Padding" Value="5,10"/>-->
                                        <Setter Property="Grid.Row" Value="1"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="LayoutTransform">
                                                <Setter.Value>
                                                    <RotateTransform Angle="-90"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>

                            <!--Device ID-->
                            <Viewbox MaxHeight="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Viewbox.Style>
                                    <Style TargetType="Viewbox">
                                        <Setter Property="Margin" Value="10,2"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                                <Setter Property="Margin" Value="2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Viewbox.Style>

                                <TextBlock Text="{Binding DeviceId}" TextAlignment="Right" Foreground="#fff" FontWeight="Bold"/>

                            </Viewbox>

                            <!--Device Description-->
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource Foreground_Opposite_Normal}"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <!--<Setter Property="TextWrapping" Value="Wrap"/>-->
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <!--<Setter Property="Width" Value="180"/>-->
                                        <Setter Property="Text" Value="{Binding Description}"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                            <!--<DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                                <Setter Property="Width" Value="100"/>
                                            </DataTrigger>-->
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!--Manufacturer & Model-->
                            <Viewbox MaxHeight="20">

                                <TextBlock FontSize="14" Foreground="#fff" FontWeight="Bold" HorizontalAlignment="Left">
                                            <Run Text="{Binding Manufacturer}"/>
                                            <Run Text="{Binding Model}"/>
                                </TextBlock>

                            </Viewbox>

                        </StackPanel>

                    </Border>

                    <!--Detailed Information-->
                    <Grid Grid.Column="2" Margin="5,0" Grid.RowSpan="5">

                        <StackPanel VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#fff"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="Viewbox">
                                    <Setter Property="MaxHeight" Value="20"/>
                                </Style>
                            </StackPanel.Resources>

                            <TextBlock Text="Device Type" FontSize="10" Margin="0,5,0,2"/>
                            <Viewbox>
                                <TextBlock Text="{Binding DeviceType}"/>
                            </Viewbox>

                            <TextBlock Text="Serial" FontSize="10" Margin="0,5,0,2"/>
                            <Viewbox>
                                <TextBlock Text="{Binding Serial}"/>
                            </Viewbox>

                            <TextBlock Text="Controller" FontSize="10" Margin="0,5,0,2"/>
                            <Viewbox>
                                <TextBlock Text="{Binding Controller}"/>
                            </Viewbox>

                            <TextBlock Text="Location" FontSize="10" Margin="0,5,0,2"/>
                            <Viewbox>
                                <TextBlock Text="{Binding Location}"/>
                            </Viewbox>

                        </StackPanel>
                        
                    </Grid>
                    
                    <!--Gloss Effect-->
                    <Border Grid.ColumnSpan="5" Grid.RowSpan="5" IsHitTestVisible="False">

                        <Grid IsHitTestVisible="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4.5*"/>
                                <RowDefinition Height="5.5*"/>
                            </Grid.RowDefinitions>

                            <Rectangle IsHitTestVisible="False">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#10ffffff" Offset="0"/>
                                        <GradientStop Color="#30ffffff" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <Rectangle Grid.Row="1" IsHitTestVisible="False">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#10000000" Offset="0"/>
                                        <GradientStop Color="#00ffffff" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <Rectangle Grid.RowSpan="2" IsHitTestVisible="False">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#10000000" Offset="0"/>
                                        <GradientStop Color="#10ffffff" Offset="0.5"/>
                                        <GradientStop Color="#10000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                        </Grid>

                    </Border>

                </Grid>

            </Border>
            <Rectangle Grid.Row="0" Height="1" VerticalAlignment="Bottom"/>

            <!--OEE-->
            <ui:MeterDisplay Height="50" Grid.Row="1" Value="{Binding Oee}" >
                <ui:MeterDisplay.Style>
                    <Style TargetType="ui:MeterDisplay" BasedOn="{StaticResource {x:Type ui:MeterDisplay}}">
                        <Setter Property="ValueFormat" Value="N1"/>
                        <Setter Property="Maximum" Value="100"/>
                        <Style.Triggers>
