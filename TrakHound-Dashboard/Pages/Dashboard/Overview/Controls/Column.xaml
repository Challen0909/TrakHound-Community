                            </DataTrigger>
                            <DataTrigger Binding="{Binding SystemStatus}" Value="Fault">
                                <Setter Property="Background" Value="{StaticResource StatusRed}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <!--Text-->
                <Viewbox Grid.Column="1" MaxHeight="30" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Viewbox.Style>
                        <Style TargetType="Viewbox">
                            <Setter Property="MaxWidth" Value="200"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding WidthStatus}" Value="2">
                                    <Setter Property="MaxWidth" Value="300"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding WidthStatus}" Value="3">
                                    <Setter Property="MaxWidth" Value="400"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Viewbox.Style>

                    <TextBlock Text="{Binding SystemMessage}" Foreground="{StaticResource Text}"/>

                </Viewbox>

            </Border>

        </Grid>

    </Border>

</UserControl>
