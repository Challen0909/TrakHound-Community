<UserControl x:Class="TrakHound_Dashboard.Pages.DeviceDetails.Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrakHound_Dashboard.Pages.DeviceDetails"
             
             xmlns:controls="clr-namespace:TrakHound_Dashboard.Pages.DeviceDetails.Controls"      
             xmlns:ui="clr-namespace:TrakHound_UI;assembly=TrakHound-UI"
             xmlns:level_indicator="clr-namespace:TrakHound_UI.LevelIndicator;assembly=TrakHound-UI"
             
             mc:Ignorable="d" 
             
             d:DesignWidth="1400">

    <UserControl.Resources>

        <Style x:Key="Heading1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="Heading2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="Heading3" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="Heading4" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="Heading5" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="Progress1" TargetType="ui:ProgressBar">
            <Setter Property="Height" Value="15"/>
            <Setter Property="Maximum" Value="1.0"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#10000000"/>
        </Style>

        <Style x:Key="NumberDisplay1" TargetType="ui:NumberDisplay">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MaxHeight" Value="30"/>
        </Style>

        <Style x:Key="TimeDisplay1" TargetType="ui:TimeDisplay">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MaxHeight" Value="30"/>
        </Style>

        <!--Device Status Pie Chart Brushes-->
        <x:ArrayExtension Type="{x:Type Brush}" x:Key="DeviceStatusBrushes">
            <SolidColorBrush Color="#19B419"/>
            <SolidColorBrush Color="#FF8B00"/>
            <SolidColorBrush Color="Red"/>
        </x:ArrayExtension>

        <Style TargetType="ui:MeterDisplay">
            <Setter Property="Foreground" Value="{StaticResource Text}" />
            <Setter Property="ActiveLevelBrush" Value="#888"/>
            <Setter Property="InactiveLevelBrush" Value="#aaa"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="ValueFormat" Value="P1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="MaxHeight" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

    </UserControl.Resources>

    <Grid x:Name="root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Side Panel-->
        <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
            <ScrollViewer.Style>
                <Style TargetType="ScrollViewer">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>

                        <DataTrigger Binding="{Binding DeviceStatus}" Value="Active">
                            <Setter Property="Background" Value="{StaticResource StatusGreen}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding DeviceStatus}" Value="Idle">
                            <Setter Property="Background" Value="{StaticResource StatusOrange}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding DeviceStatus}" Value="Alert">
                            <Setter Property="Background" Value="{StaticResource StatusRed}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Connected}" Value="false">
                            <Setter Property="Background" Value="{StaticResource Disabled}"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </ScrollViewer.Style>

            <Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel>

                                <!--Device Logo-->
                                <Image Source="{Binding DeviceLogo}" HorizontalAlignment="Center" Stretch="Uniform" VerticalAlignment="Top">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="MaxHeight" Value="100"/>
                                            <Setter Property="MaxWidth" Value="250"/>
                                            <Setter Property="Margin" Value="0,15,0,5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DeviceLogo}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <!--Device Image-->
                                <Image Source="{Binding DeviceImage}" Margin="10">
                                    <Image.Effect>
                                        <DropShadowEffect Direction="225" Color="#66000000" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                                    </Image.Effect>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="MaxHeight" Value="200"/>
                                            <Setter Property="MaxWidth" Value="280"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DeviceImage}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <!--Device Info-->
                                <Border Margin="0,0,0,10">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Padding" Value="5"/>
                                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                                            <Setter Property="Grid.Row" Value="2"/>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Margin" Value="0,2"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Resources>

                                        <!--Device ID-->
                                        <Viewbox MaxHeight="40" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Viewbox.Style>
                                                <Style TargetType="Viewbox">
                                                    <Setter Property="Margin" Value="10,2"/>
                                                </Style>
                                            </Viewbox.Style>

                                            <TextBlock Text="{Binding Device.Description.DeviceId}" TextAlignment="Right" Foreground="#fff" FontWeight="Bold"/>

                                        </Viewbox>

                                        <!--Device Description-->
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource Foreground_Opposite_Normal}"/>
                                                    <Setter Property="FontSize" Value="16"/>
                                                    <Setter Property="TextAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Text" Value="{Binding Device.Description.Description}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                        <Trigger Property="Text" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!--Manufacturer & Model-->
                                        <Viewbox MaxHeight="30">

                                            <TextBlock Foreground="#fff" FontWeight="Bold" HorizontalAlignment="Left">
                                            <Run Text="{Binding Device.Description.Manufacturer}"/>
                                            <Run Text="{Binding Device.Description.Model}"/>
                                            </TextBlock>

                                        </Viewbox>

                                    </StackPanel>

                                </Border>

                            </StackPanel>

                            <!--Status Indicator-->
                            <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <!--Not Connected Indicator-->
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Height" Value="50"/>
                                            <Setter Property="Width" Value="50"/>
                                            <Setter Property="Margin" Value="5"/>
                                            <Setter Property="OpacityMask" Value="{StaticResource Power_Large_IMG}"/>
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Connected}" Value="false">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!--Alert Indicator-->
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Height" Value="50"/>
                                            <Setter Property="Width" Value="50"/>
                                            <Setter Property="Margin" Value="5"/>
                                            <Setter Property="OpacityMask" Value="{StaticResource Alert_Large_IMG}"/>
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Connected}" Value="true"/>
                                                        <Condition Binding="{Binding DeviceStatus}" Value="Alert"/>
                                                    </MultiDataTrigger.Conditions>

                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.ExitActions>

                                                </MultiDataTrigger>

                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!--Idle Indicator-->
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Height" Value="40"/>
                                            <Setter Property="Width" Value="40"/>
                                            <Setter Property="Margin" Value="5"/>
                                            <Setter Property="OpacityMask" Value="{StaticResource Idle_Large_IMG}"/>
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Connected}" Value="true"/>
                                                        <Condition Binding="{Binding DeviceStatus}" Value="Idle"/>
                                                    </MultiDataTrigger.Conditions>

                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.ExitActions>

                                                </MultiDataTrigger>

                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!--Active Indicator-->
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Height" Value="50"/>
                                            <Setter Property="Width" Value="50"/>
                                            <Setter Property="Margin" Value="5"/>
                                            <Setter Property="OpacityMask" Value="{StaticResource Active_Large_IMG}"/>
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Connected}" Value="true"/>
                                                        <Condition Binding="{Binding DeviceStatus}" Value="Active"/>
                                                    </MultiDataTrigger.Conditions>

                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="0" To="1.0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Duration="00:00:1.0" Storyboard.TargetProperty="Opacity" From="1.0" To="0" >
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.ExitActions>

                                                </MultiDataTrigger>

                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!--Time Display-->
                                <ui:TimeDisplay Time="{Binding DeviceStatusTime}" Foreground="#fff" Margin="10,0" HorizontalAlignment="Center">
                                    <ui:TimeDisplay.Style>
                                        <Style TargetType="ui:TimeDisplay">
                                            <Setter Property="MaxHeight" Value="50"/>
                                            <Setter Property="Grid.Column" Value="1"/>
                                        </Style>
                                    </ui:TimeDisplay.Style>
                                </ui:TimeDisplay>

                            </Grid>

                        </Grid>

                    <Border Grid.Row="4" Background="#10000000" Padding="0,20">

                        <StackPanel>

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--Icon-->
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Height" Value="30"/>
                                            <Setter Property="Width" Value="30"/>
                                            <Setter Property="Background" Value="{StaticResource Text}"/>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EmergencyStop}" Value="ARMED">
                                                    <Setter Property="OpacityMask" Value="{StaticResource Estop_IMG}"/>
                                                    <Setter Property="Background" Value="#FFFFFF"/>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding EmergencyStop}" Value="TRIGGERED">
                                                    <Setter Property="OpacityMask" Value="{StaticResource Estop_IMG}"/>
                                                    <Setter Property="Background" Value="#FFFFFF"/>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                </Grid>

                                <!--Text-->
                                <Viewbox Grid.Column="1" MaxHeight="20" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Viewbox.Style>
                                        <Style TargetType="Viewbox">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Viewbox.Style>

                                    <TextBlock Text="{Binding EmergencyStop}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource Text}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EmergencyStop}" Value="ARMED">
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding EmergencyStop}" Value="TRIGGERED">
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                </Viewbox>

                            </Grid>

                            <Rectangle Fill="#20FFFFFF" Height="1" Margin="10"/>

                            <!--Controller Indicators-->
                            <Grid Grid.Row="1" Margin="5,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--Execution Mode-->
                                <Grid Grid.Column="0" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="OpacityMask" Value="{StaticResource Paused_IMG}" />
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Height" Value="25"/>
                                                <Setter Property="Width" Value="25"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ExecutionMode}" Value="ACTIVE">
                                                        <Setter Property="OpacityMask" Value="{StaticResource Started_IMG}" />
                                                        <Setter Property="Background" Value="#fff"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ExecutionMode}" Value="STOPPED">
                                                        <Setter Property="OpacityMask" Value="{StaticResource Stopped_IMG}" />
                                                        <Setter Property="Background" Value="#fff"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ExecutionMode}" Value="UNAVAILABLE">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ExecutionMode}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                    </Grid>

                                    <Viewbox Grid.Row="1" MaxHeight="10" Margin="0,5,0,0">

                                        <TextBlock Text="{Binding ExecutionMode}" Foreground="#FFFFFF"/>

                                    </Viewbox>

                                </Grid>

                                <!--Controller Mode-->
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="OpacityMask" Value="{StaticResource Auto_IMG}" />
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Height" Value="30"/>
                                                <Setter Property="Width" Value="30"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ControllerMode}" Value="SEMI_AUTOMATIC">
                                                        <Setter Property="OpacityMask" Value="{StaticResource SemiAuto_IMG}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ControllerMode}" Value="MANUAL_DATA_INPUT">
                                                        <Setter Property="OpacityMask" Value="{StaticResource MDI_IMG}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ControllerMode}" Value="MANUAL">
                                                        <Setter Property="OpacityMask" Value="{StaticResource Manual_IMG}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ControllerMode}" Value="EDIT">
                                                        <Setter Property="OpacityMask" Value="{StaticResource Edit_IMG}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ControllerMode}" Value="UNAVAILABLE">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ControllerMode}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                    </Grid>

                                    <Viewbox Grid.Row="1" MaxHeight="10" Margin="0,5,0,0">

                                        <TextBlock Text="{Binding ControllerMode}" Foreground="#FFFFFF"/>

                                    </Viewbox>

                                </Grid>

                                <!--System Status-->
                                <Grid Grid.Column="2" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="OpacityMask" Value="{StaticResource Status_Normal_IMG}" />
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Height" Value="25"/>
                                                <Setter Property="Width" Value="25"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SystemStatus}" Value="Warning">
                                                        <Setter Property="OpacityMask" Value="{StaticResource Alert_IMG}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SystemStatus}" Value="Fault">
                                                        <Setter Property="OpacityMask" Value="{StaticResource Alert_IMG}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                    </Grid>

                                    <Viewbox Grid.Row="1" MaxHeight="10" Margin="0,5,0,0">

                                        <TextBlock Text="{Binding SystemStatus}" Foreground="#FFFFFF"/>

                                    </Viewbox>

                                </Grid>

                            </Grid>

                            <Rectangle Fill="#20FFFFFF" Height="1" Margin="10"/>

                            <!--System Status-->
                            <TextBlock Text="System Message" Style="{StaticResource Heading4}" FontSize="10" Foreground="White" Margin="10,0,0,10" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding SystemMessage}" Style="{StaticResource Heading3}" Foreground="White" TextAlignment="Left" TextWrapping="Wrap" Margin="10,0,0,0"/>

                            <Rectangle Fill="#20FFFFFF" Height="1" Margin="10"/>

                            <!--Program Information-->
                            <TextBlock Text="Current Program" Style="{StaticResource Heading4}" FontSize="10" Foreground="White" Margin="10,0,0,10" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding Program}" Style="{StaticResource Heading3}" Foreground="White" TextAlignment="Left" TextWrapping="Wrap" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding ProgramLine}" Style="{StaticResource Heading5}" Foreground="White" TextAlignment="Left" TextWrapping="Wrap" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding ProgramBlock}" Style="{StaticResource Heading5}" Foreground="White" TextAlignment="Left" TextWrapping="Wrap" Margin="10,0,0,0"/>

                        </StackPanel>

                    </Border>

                </Grid>

                <!--Gloss Effect-->
                <Border IsHitTestVisible="False">

                    <Grid IsHitTestVisible="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4.5*"/>
                            <RowDefinition Height="5.5*"/>
                        </Grid.RowDefinitions>

                        <Rectangle IsHitTestVisible="False">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#10ffffff" Offset="0"/>
