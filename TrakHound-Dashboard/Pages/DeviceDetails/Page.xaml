                            <ui:ProgressBar Grid.Row="1" Grid.Column="2" Value="{Binding IdlePercentage}" Style="{StaticResource Progress1}" Foreground="{StaticResource StatusOrange}"/>
                            <ui:TimeDisplay Grid.Row="1" Grid.Column="3" Time="{Binding IdleTime}" Style="{StaticResource TimeDisplay1}" Margin="10,0"/>

                            <!--Alert-->
