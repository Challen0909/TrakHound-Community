        </ScrollViewer>

        <!--Page Content-->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">

            <StackPanel Margin="40">

                <!--Device Status Analysis-->
                <StackPanel>

                    <!--Section Title-->
                    <TextBlock Text="Device Status" Style="{StaticResource Heading1}"/>

                    <Rectangle Height="1" Fill="{StaticResource Border}" Margin="0,0,0,20"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <!--Device Status Times-->
                        <Grid Height="200" Margin="0,0,40,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*" MaxWidth="400"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

