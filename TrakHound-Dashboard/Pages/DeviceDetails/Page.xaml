                            </ui:PieChart.ColorSelector>
                        </ui:PieChart>

                    </Grid>

                    <!--Active Title-->
                    <TextBlock Text="Active (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--Active Timeline-->
                    <controls:HourTimeline HourDatas="{Binding ActiveHourDatas}" Margin="0,0,0,20"/>


                    <!--Idle Title-->
                    <TextBlock Text="Idle (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--Idle Timeline-->
                    <controls:HourTimeline HourDatas="{Binding IdleHourDatas}" Margin="0,0,0,20"/>


                    <!--Alert Title-->
                    <TextBlock Text="Alert (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--Alert Timeline-->
                    <controls:HourTimeline HourDatas="{Binding AlertHourDatas}" Margin="0,0,0,0"/>
                    
                </StackPanel>

                <!--Oee Analysis-->
                <StackPanel Margin="0,40">

                    <!--Section Title-->
                    <TextBlock Text="OEE Analysis" Style="{StaticResource Heading1}"/>

                    <Rectangle Height="1" Fill="{StaticResource Border}" Margin="0,0,0,20"/>

                    <!--Overview-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="225"/>
                            <ColumnDefinition Width="*" MinWidth="225"/>
                            <ColumnDefinition Width="*" MinWidth="225"/>
                            <ColumnDefinition Width="*" MinWidth="225"/>
                        </Grid.ColumnDefinitions>

                        <!--OEE-->
                        <StackPanel>

                            <TextBlock Text="OEE" Style="{StaticResource Heading2}" HorizontalAlignment="Center"/>

                            <ui:MeterDisplay Value="{Binding Oee}">
                                <ui:MeterDisplay.Style>
                                    <Style TargetType="ui:MeterDisplay" BasedOn="{StaticResource {x:Type ui:MeterDisplay}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OeeStatus}" Value="0">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusRed}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusRed_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OeeStatus}" Value="1">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusOrange}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusOrange_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OeeStatus}" Value="2">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusGreen}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusGreen_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                                <Setter Property="ValueFormat" Value="N1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:MeterDisplay.Style>
                            </ui:MeterDisplay>

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <!--Standard Deviation-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Standard Deviation" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding OeeDeviation, StringFormat=P1}" Style="{StaticResource Heading3}"/>

                                <!--High Hour-->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="High Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding OeeHigh, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding OeeHighTime}" Style="{StaticResource Heading4}"/>

                                <!--Low Hour-->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Low Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding OeeLow, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="2" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding OeeLowTime}" Style="{StaticResource Heading4}"/>

                            </Grid>

                        </StackPanel>

                        <!--Availability-->
                        <StackPanel Grid.Column="1">

                            <TextBlock Text="Availability" Style="{StaticResource Heading2}" HorizontalAlignment="Center"/>

                            <ui:MeterDisplay Value="{Binding Availability}">
                                <ui:MeterDisplay.Style>
                                    <Style TargetType="ui:MeterDisplay" BasedOn="{StaticResource {x:Type ui:MeterDisplay}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AvailabilityStatus}" Value="0">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusRed}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusRed_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding AvailabilityStatus}" Value="1">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusOrange}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusOrange_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding AvailabilityStatus}" Value="2">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusGreen}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusGreen_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                                <Setter Property="ValueFormat" Value="N1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:MeterDisplay.Style>
                            </ui:MeterDisplay>

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <!--Standard Deviation-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Standard Deviation" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding AvailabilityDeviation, StringFormat=P1}" Style="{StaticResource Heading3}"/>

                                <!--High Hour-->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="High Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding AvailabilityHigh, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding AvailabilityHighTime}" Style="{StaticResource Heading4}"/>

                                <!--Low Hour-->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Low Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding AvailabilityLow, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="2" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding AvailabilityLowTime}" Style="{StaticResource Heading4}"/>

                            </Grid>

                        </StackPanel>

                        <!--Performance-->
                        <StackPanel Grid.Column="2">

                            <TextBlock Text="Performance" Style="{StaticResource Heading2}" HorizontalAlignment="Center"/>

                            <ui:MeterDisplay Value="{Binding Performance}">
                                <ui:MeterDisplay.Style>
                                    <Style TargetType="ui:MeterDisplay" BasedOn="{StaticResource {x:Type ui:MeterDisplay}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PerformanceStatus}" Value="0">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusRed}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusRed_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding PerformanceStatus}" Value="1">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusOrange}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusOrange_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding PerformanceStatus}" Value="2">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusGreen}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusGreen_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                                <Setter Property="ValueFormat" Value="N1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:MeterDisplay.Style>
                            </ui:MeterDisplay>

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <!--Standard Deviation-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Standard Deviation" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding PerformanceDeviation, StringFormat=P1}" Style="{StaticResource Heading3}"/>

                                <!--High Hour-->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="High Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding PerformanceHigh, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding PerformanceHighTime}" Style="{StaticResource Heading4}"/>

                                <!--Low Hour-->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Low Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding PerformanceLow, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="2" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding PerformanceLowTime}" Style="{StaticResource Heading4}"/>

                            </Grid>

                        </StackPanel>

                        <!--Quality-->
                        <StackPanel Grid.Column="3">

                            <TextBlock Text="Quality" Style="{StaticResource Heading2}" HorizontalAlignment="Center"/>

                            <ui:MeterDisplay Value="{Binding Quality}">
                                <ui:MeterDisplay.Style>
                                    <Style TargetType="ui:MeterDisplay" BasedOn="{StaticResource {x:Type ui:MeterDisplay}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding QualityStatus}" Value="0">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusRed}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusRed_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding QualityStatus}" Value="1">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusOrange}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusOrange_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding QualityStatus}" Value="2">
                                                <Setter Property="ActiveLevelBrush" Value="{StaticResource StatusGreen}"/>
                                                <Setter Property="InactiveLevelBrush" Value="{StaticResource StatusGreen_Hover}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WidthStatus}" Value="1">
                                                <Setter Property="ValueFormat" Value="N1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:MeterDisplay.Style>
                            </ui:MeterDisplay>

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <!--Standard Deviation-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Standard Deviation" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding QualityDeviation, StringFormat=P1}" Style="{StaticResource Heading3}"/>

                                <!--High Hour-->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="High Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding QualityHigh, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding QualityHighTime}" Style="{StaticResource Heading4}"/>

                                <!--Low Hour-->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Low Hour" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding QualityLow, StringFormat=P1}" Style="{StaticResource Heading3}"/>
                                <TextBlock Grid.Row="2" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding QualityLowTime}" Style="{StaticResource Heading4}"/>

                            </Grid>

                        </StackPanel>

                    </Grid>

                    <Rectangle Height="1" Fill="{StaticResource Border}" Margin="0,20"/>

                    <!--OEE Title-->
                    <TextBlock Text="OEE (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--OEE Timeline-->
                    <controls:HourTimeline HourDatas="{Binding OeeHourDatas}" Margin="0,0,0,20"/>

                    
                    <!--Availability Title-->
                    <TextBlock Text="Availability (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--Availability Timeline-->
                    <controls:HourTimeline HourDatas="{Binding AvailabilityHourDatas}" Margin="0,0,0,20"/>

                    
                    <!--Performance Title-->
                    <TextBlock Text="Performance (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--Performance Timeline-->
                    <controls:HourTimeline HourDatas="{Binding PerformanceHourDatas}" Margin="0,0,0,20"/>

                    
                    <!--Quality Title-->
                    <TextBlock Text="Quality (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--Quality Timeline-->
                    <controls:HourTimeline HourDatas="{Binding QualityHourDatas}" Margin="0,0,0,20"/>

                </StackPanel>

                <!--Parts Analysis-->
                <StackPanel Margin="0,20">

                    <!--Section Title-->
                    <TextBlock Text="Part Count Analysis" Style="{StaticResource Heading1}"/>

                    <Rectangle Height="1" Fill="{StaticResource Border}" Margin="0,0,0,20"/>

                    <!--Part Count Statistics-->
                    <Grid HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <!--24 Hour Total-->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="24 Hour Total" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding PartCountTotal, StringFormat=N0}" Style="{StaticResource Heading3}"/>

                        <!--24 Hour Average-->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="24 Hour Average" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding PartCountAverage, StringFormat=N0}" Style="{StaticResource Heading3}"/>

                        <!--High Hour-->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="High Hour" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding PartCountHigh, StringFormat=N0}" Style="{StaticResource Heading3}"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding PartCountHighTime}" Style="{StaticResource Heading4}"/>

                        <!--Low Hour-->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Low Hour" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding PartCountLow, StringFormat=N0}" Style="{StaticResource Heading3}"/>
                        <TextBlock Grid.Row="3" Grid.Column="3" Text=":" Margin="10,0,10,10" Style="{StaticResource Heading4}"/>
                        <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding PartCountLowTime}" Style="{StaticResource Heading4}"/>

                    </Grid>

                    <Rectangle Height="1" Fill="{StaticResource Border}" Margin="0,20"/>

                    <!--Parts Count Timeline Title-->
                    <TextBlock Text="Part Count (Last 24 Hours)" Style="{StaticResource Heading3}" HorizontalAlignment="Left"/>

                    <!--Parts Count Timeline Timeline-->
                    <controls:HourTimeline HourDatas="{Binding PartCountHourDatas}" Margin="0,0,0,20" ValueFormat="N0"/>

                </StackPanel>

            </StackPanel>

        </ScrollViewer>

        <!--Loading Animation-->
        <Grid Grid.ColumnSpan="2" Background="{StaticResource Background}">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Loading}" Value="false">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="00:00:0.15" Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="00:00:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                        <Trigger Property="Opacity" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <ui:Spinner HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50" Foreground="{StaticResource Spinner}" />

                <TextBlock Text="Loading Device.." Foreground="{StaticResource Text}" TextAlignment="Center" TextWrapping="Wrap" Margin="0,20,0,0" FontSize="12pt"/>

            </StackPanel>

        </Grid>

    </Grid>

</UserControl>
