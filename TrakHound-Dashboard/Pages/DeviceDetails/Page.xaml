                            <ui:ProgressBar Grid.Row="0" Grid.Column="2" Value="{Binding ActivePercentage}" Style="{StaticResource Progress1}" Foreground="{StaticResource StatusGreen}"/>
                            <ui:TimeDisplay Grid.Row="0" Grid.Column="3" Time="{Binding ActiveTime}" Style="{StaticResource TimeDisplay1}" Margin="10,0"/>

                            <!--Idle-->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Idle" Style="{StaticResource Heading3}" Margin="10,0"/>
