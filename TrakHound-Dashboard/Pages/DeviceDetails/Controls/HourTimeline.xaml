<UserControl x:Class="TrakHound_Dashboard.Pages.DeviceDetails.Controls.HourTimeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrakHound_Dashboard.Pages.DeviceDetails.Controls"
             
             xmlns:ui="clr-namespace:TrakHound_UI;assembly=TrakHound-UI"
                          
             mc:Ignorable="d" 
             d:DesignWidth="1000">

    <Border x:Name="root">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Headers-->
            <Border BorderBrush="{StaticResource Border}" BorderThickness="0,0,0,1" Background="{StaticResource Background_Alternate}">

                <UniformGrid Grid.Column="3" Columns="24">
                    <UniformGrid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="{StaticResource Text_Alternate}"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="FontSize" Value="10"/>
                        </Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Fill" Value="{StaticResource Border_Alternate}"/>
                            <Setter Property="Width" Value="1"/>
                        </Style>
                    </UniformGrid.Resources>

                    <Grid>
                        <TextBlock Text="12 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="1 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="2 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="3 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="4 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="5 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="6 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="7 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="8 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="9 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="10 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="11 AM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="12 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="1 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="2 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="3 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="4 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="5 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="6 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="7 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="8 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="9 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="10 PM"/>
                        <Rectangle/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="11 PM"/>
                        <Rectangle/>
                    </Grid>

                </UniformGrid>

            </Border>

            <!--Hour Segments-->
            <UniformGrid Grid.Row="1" Columns="24" Height="50">

                <local:HourSegment HourData="{Binding HourDatas[0]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[1]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[2]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[3]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[4]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[5]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[6]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[7]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[8]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[9]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[10]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[11]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[12]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[13]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[14]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[15]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[16]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[17]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[18]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[19]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[20]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[21]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[22]}" ValueFormat="{Binding ValueFormat}"/>
                <local:HourSegment HourData="{Binding HourDatas[23]}" ValueFormat="{Binding ValueFormat}"/>

            </UniformGrid>

            <!--Gloss Overlay-->
            <Border IsHitTestVisible="False">

                <Grid IsHitTestVisible="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4.5*"/>
                        <RowDefinition Height="5.5*"/>
                    </Grid.RowDefinitions>

                    <Rectangle IsHitTestVisible="False">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#10ffffff" Offset="0"/>
                                <GradientStop Color="#20ffffff" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Rectangle Grid.Row="1" IsHitTestVisible="False">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#10000000" Offset="0"/>
                                <GradientStop Color="#00ffffff" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                </Grid>

            </Border>

        </Grid>

    </Border>
    
</UserControl>
