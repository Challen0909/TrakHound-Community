<UserControl x:Class="TrakHound_Client.Pages.Plugins.Installed.Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:TrakHound_Client.Pages.Plugins.Installed"
             
             Width="800"
             mc:Ignorable="d" 
             d:DesignHeight="300">
    
    <Grid>

        <Border BorderBrush="{StaticResource Shade_Normal}">

            <!--Installed Plugins-->
            <Grid Margin="0,0,0,50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Installed Plugins" FontSize="16" Margin="0,0,0,10" Foreground="{StaticResource Foreground_Normal}" VerticalAlignment="Center"/>

                </Grid>
                
                <ItemsControl Grid.Row="1" ItemsSource="{Binding ListItems}">
                    <ItemsControl.Resources>
                        <Style TargetType="local:ListItem">
                            <Setter Property="Margin" Value="0,5"/>
                        </Style>
                    </ItemsControl.Resources>
                </ItemsControl>

            </Grid>

        </Border>
    
    </Grid>
    
</UserControl>
