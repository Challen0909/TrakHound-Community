                                <Style TargetType="Rectangle">
                                    <Setter Property="OpacityMask" Value="{StaticResource IMG}" />
                                    <Setter Property="Fill" Value="#0080ff"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#00aaff">
                                                            <ColorAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ColorAnimation.EasingFunction>
                                                        </ColorAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard FillBehavior="Stop">
                                                        <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#0080ff">
                                                            <ColorAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ColorAnimation.EasingFunction>
                                                        </ColorAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                        
                                        <!--<DataTrigger Binding="{Binding IsMouseOver}" Value="true">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#fff">
                                                            <ColorAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ColorAnimation.EasingFunction>
                                                        </ColorAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard FillBehavior="Stop">
                                                        <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#aaffffff">
                                                            <ColorAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ColorAnimation.EasingFunction>
                                                        </ColorAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>-->
                                    </Style.Triggers>
                                </Style>
                            </Rectangle.Style>
                            
                        </Rectangle>

                    </StackPanel>
                 
                    <!--Input-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Border BorderThickness="1" CornerRadius="1" Margin="10,5">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#aaa"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFocused, ElementName=company_TXT}" Value="true">
                                            <Setter Property="BorderBrush" Value="#0080ff"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid Margin="10,0">

                                <!--User Input-->
                                <TextBox x:Name="company_TXT" TextChanged="company_TXT_TextChanged" BorderThickness="0" Background="#00000000"  FontSize="12pt" Foreground="#333" Height="35" VerticalAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" CaretBrush="Black"/>

                            </Grid>

                        </Border>

                    </Grid>

                </StackPanel>

            </StackPanel>

            <!--Images-->
            <StackPanel Grid.Column="1" Margin="40,0,0,0">

                <!--Title and Help-->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">

                    <!--Title-->
                    <TextBlock Text="Manufacturer Logo" Foreground="#333" Margin="0,0" FontSize="12pt" VerticalAlignment="Center"/>

                    <!--Help-->
                    <Rectangle Margin="10,0" Width="15" Height="15" MouseDown="Help_MouseDown" MouseEnter="Help_MouseEnter" MouseLeave="Help_MouseLeave">
                        <Rectangle.ToolTip>
                            <ToolTip MaxWidth="400">
                                <StackPanel>
                                    <TextBlock Text="Manufacturer Logo" FontWeight="Bold"/>
                                    <TextBlock TextWrapping="Wrap">
                                            Upload a logo 
                                    </TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Rectangle.ToolTip>


                        <Rectangle.Resources>
                            <ImageBrush x:Key="IMG" Stretch="Uniform" ImageSource="/TrakHound-Server-Control-Panel;component/Resources/Help_01.png" />
                        </Rectangle.Resources>

                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="OpacityMask" Value="{StaticResource IMG}" />
                                <Setter Property="Fill" Value="#0080ff"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#00aaff">
                                                        <ColorAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard FillBehavior="Stop">
                                                    <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#0080ff">
                                                        <ColorAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>

                    </Rectangle>

                </StackPanel>

                <!--Manufacturer Logo-->
                <Grid>

                    <Rectangle Grid.Column="1" Stroke="#aaa" Height="100" Width="200" StrokeThickness="2" SnapsToDevicePixels="True" StrokeDashArray="2">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ManufacturerLogoSet}" Value="true">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>

                    <Border x:Name="manufacturer_BD">

                        <Grid>

                            <Image Source="{Binding ManufacturerLogo}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Border Width="100" Height="30" CornerRadius="2" Margin="10,0" PreviewMouseDown="manufacturerlogo_PreviewMouseDown">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Background" Value="#0080ff"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" Value="#00aaff"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding ManufacturerLogoSet}" Value="true">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Background" Value="#33ffffff"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="true"/>
                                                    <Condition Binding="{Binding ManufacturerLogoSet}" Value="true"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="#aaffffff"/>
                                            </MultiDataTrigger>
                                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=manufacturer_BD}" Value="true">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid Margin="5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--Camera Icon-->
                                    <Rectangle Height="30"  Width="30" >
                                        <Rectangle.Resources>
                                            <ImageBrush x:Key="IMG" Stretch="Uniform" ImageSource="/TrakHound-Server-Control-Panel;component/Resources/Camera_01.png" />
                                        </Rectangle.Resources>

                                        <Rectangle.Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="OpacityMask" Value="{StaticResource IMG}" />
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Setter Property="Fill" Value="#fff"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ManufacturerLogoSet}" Value="true">
                                                        <Setter Property="Fill" Value="#333"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>

                                    <!--Upload Text-->
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" FontSize="10pt" TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Upload"/>
                                                <Setter Property="Foreground" Value="#fff"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ManufacturerLogoSet}" Value="true">
                                                        <Setter Property="Text" Value="Change"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ManufacturerLogoSet}" Value="true">
                                                        <Setter Property="Foreground" Value="#333"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                </Grid>

                            </Border>

                        </Grid>

                    </Border>

                </Grid>

                
                <!--Title and Help-->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,5">

                    <!--Title-->
                    <TextBlock Text="Device Image" Foreground="#333" Margin="0,0" FontSize="12pt" VerticalAlignment="Center"/>

                    <!--Help-->
                    <Rectangle Margin="10,0" Width="15" Height="15" MouseDown="Help_MouseDown" MouseEnter="Help_MouseEnter" MouseLeave="Help_MouseLeave">
                        <Rectangle.ToolTip>
                            <ToolTip MaxWidth="400">
                                <StackPanel>
                                    <TextBlock Text="Device Image" FontWeight="Bold"/>
                                    <TextBlock TextWrapping="Wrap">
                                            Upload a logo
                                    </TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Rectangle.ToolTip>


                        <Rectangle.Resources>
                            <ImageBrush x:Key="IMG" Stretch="Uniform" ImageSource="/TrakHound-Server-Control-Panel;component/Resources/Help_01.png" />
                        </Rectangle.Resources>

                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="OpacityMask" Value="{StaticResource IMG}" />
                                <Setter Property="Fill" Value="#0080ff"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#00aaff">
                                                        <ColorAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard FillBehavior="Stop">
                                                    <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Fill.Color" To="#0080ff">
                                                        <ColorAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>

                    </Rectangle>

                </StackPanel>

                <!--Device Image-->
                <Grid>

                    <Rectangle Grid.Column="1" Stroke="#aaa" Height="200" Width="200" StrokeThickness="2" SnapsToDevicePixels="True" StrokeDashArray="2"/>

                    <Border x:Name="deviceimage_BD">

                        <Grid>

                            <Image Source="{Binding DeviceImage}" />

                            <Border Width="100" Height="30" CornerRadius="2" Margin="10,0" PreviewMouseDown="deviceimage_PreviewMouseDown">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Background" Value="#0080ff"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" Value="#00aaff"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding DeviceImageSet}" Value="true">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=deviceimage_BD}" Value="true">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid Margin="5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--Camera Icon-->
                                    <Rectangle Height="30"  Width="30" >
                                        <Rectangle.Resources>
                                            <ImageBrush x:Key="IMG" Stretch="Uniform" ImageSource="/TrakHound-Server-Control-Panel;component/Resources/Camera_01.png" />
                                        </Rectangle.Resources>

                                        <Rectangle.Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="OpacityMask" Value="{StaticResource IMG}" />
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Setter Property="Fill" Value="#fff"/>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>

                                    <!--Upload Text-->
                                    <TextBlock Grid.Column="1" Foreground="#fff" VerticalAlignment="Center" TextAlignment="Center" FontSize="10pt" TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Upload"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DeviceImageSet}" Value="true">
                                                        <Setter Property="Text" Value="Change"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                </Grid>

                            </Border>

                        </Grid>

                    </Border>

                </Grid>

            </StackPanel>
            
        </Grid>

    </Grid>

</UserControl>
