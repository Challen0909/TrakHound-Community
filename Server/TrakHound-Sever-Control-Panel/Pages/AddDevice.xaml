<UserControl x:Class="TrakHound_Server_Control_Panel.Pages.AddDevice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:TrakHound_Server_Control_Panel"
             
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="local:PageItem">
                <Setter Property="Margin" Value="10"/>
            </Style>
        </StackPanel.Resources>
          
        <!--From File-->
        <local:PageItem Clicked="DeviceFromFile_Clicked" AlternateStyle="true" Text="Read Device From File" Image="/TrakHound-Server-Control-Panel;component/Resources/List_01.png" />

        <!--New-->
        <local:PageItem Clicked="NewDevice_Clicked" AlternateStyle="true" Text="Create New Device" Image="/TrakHound-Server-Control-Panel;component/Resources/Information_01.png" />

    </StackPanel>
    
</UserControl>
