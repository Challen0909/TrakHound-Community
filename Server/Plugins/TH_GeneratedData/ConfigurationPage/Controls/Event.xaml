<UserControl x:Class="TH_GeneratedData.ConfigurationPage.Controls.Event"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:controls="clr-namespace:TH_GeneratedData.ConfigurationPage.Controls"
             
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Description-->
        <StackPanel Margin="10">

            <TextBlock Text="Event Description" FontSize="8pt" Foreground="#aaa" Margin="0,5"/>

            <TextBlock Text="{Binding Description}" FontSize="10pt" Foreground="#888" Margin="0,5"/>

        </StackPanel>
             
        
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Values}">
            <ItemsControl.Resources>
                <Style TargetType="controls:Value">
                    <Setter Property="Margin" Value="10"/>
                </Style>
            </ItemsControl.Resources>
        </ItemsControl>
            
    </Grid>
    
</UserControl>
