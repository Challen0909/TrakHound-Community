<UserControl x:Class="TH_GeneratedData.ConfigurationPage.Controls.Default"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:th_wpf="clr-namespace:TH_WPF;assembly=TH_WPF"
             
             mc:Ignorable="d" 
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock Text="Default Value" FontSize="8pt" Foreground="#aaa" Margin="10,5"/>

        <!--Value Header-->
        <Border Grid.Row="1" CornerRadius="2" Background="#0080ff" Width="200">

            <StackPanel Margin="20,10" VerticalAlignment="Center">

                <!--Value Name-->
                <StackPanel>

                    <TextBlock Text="Value" Foreground="#66ffffff" FontSize="10pt" />

                    <StackPanel Orientation="Horizontal">

                        <Border BorderThickness="1" CornerRadius="1" Margin="0,5,0,5" MinWidth="100">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#33ffffff"/>
                                    <Setter Property="Background" Value="#00000000"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFocused, ElementName=valuename_TXT}" Value="true">
                                            <Setter Property="BorderBrush" Value="#0060ff"/>
                                            <Setter Property="Background" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid Margin="10,0">

                                <!--User Input-->
                                <TextBox x:Name="valuename_TXT" Text="{Binding ValueName}" TextChanged="TextBox_TextChanged" BorderThickness="0" Background="#00000000"  FontSize="14pt" Height="35" VerticalAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" CaretBrush="Black">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Foreground" Value="#fff"/>
                                            <Setter Property="TextAlignment" Value="Left"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFocused, ElementName=valuename_TXT}" Value="true">
                                                    <Setter Property="Foreground" Value="#333"/>
                                                    <Setter Property="TextAlignment" Value="Center"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                            </Grid>

                        </Border>

                        <!--Edit Button-->
                        <th_wpf:Button_02 Image="/TH_GeneratedData;component/Resources/Edit_02.png" ToolTip="Edit" Margin="5,0" VerticalAlignment="Center" Clicked="Edit_Clicked"/>

                    </StackPanel>


                    <!--<StackPanel Orientation="Horizontal">

                        --><!--Value--><!--
                        <TextBox x:Name="valuename_TXT" Text="{Binding ValueName}" TextChanged="TextBox_TextChanged" Margin="0,5" Foreground="White" FontSize="14pt" TextWrapping="Wrap" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}"/>

                        --><!--Edit Button--><!--
                        <th_wpf:Button_02 Image="/TH_GeneratedData;component/Resources/Edit_02.png" ToolTip="Edit" Margin="5,0" Clicked="Edit_Clicked"/>
                        
                    </StackPanel>-->

                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>

</UserControl>
